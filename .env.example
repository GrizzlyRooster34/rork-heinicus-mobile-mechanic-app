# Environment Configuration Example
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control

# ====================
# Build Configuration
# ====================

# Required for Android builds with Google Services
GOOGLE_SERVICES_JSON=

# Google Maps API Key for location features
GOOGLE_MAPS_API_KEY=

# Expo Application Services Project ID
EAS_PROJECT_ID=

# ====================
# Authentication
# ====================

# JWT Secret for token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# JWT Token Expiration (e.g., '1h', '7d', '30d')
JWT_EXPIRATION=7d

# Refresh Token Expiration
REFRESH_TOKEN_EXPIRATION=30d

# ====================
# Database
# ====================

# Database connection URL
# Examples:
# PostgreSQL: postgresql://user:password@localhost:5432/dbname
# MongoDB: mongodb://user:password@localhost:27017/dbname
# Firebase: (configure in firebase-config.ts)
DATABASE_URL=

# ====================
# API Configuration
# ====================

# Base URL for API (used for backend server)
API_BASE_URL=http://localhost:3000

# API Port
API_PORT=3000

# ====================
# Firebase (if using)
# ====================

FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# ====================
# Payment Configuration
# ====================

# Stripe Keys (if implementing Stripe payments)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# ====================
# External Services
# ====================

# VIN Decoder API (if using external service)
VIN_DECODER_API_KEY=

# SMS Service (Twilio, etc.)
SMS_SERVICE_API_KEY=
SMS_SERVICE_PHONE_NUMBER=

# Email Service (SendGrid, etc.)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=

# ====================
# Logging & Monitoring
# ====================

# Sentry DSN for error tracking
SENTRY_DSN=

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ====================
# Environment
# ====================

# Environment type (development, staging, production)
NODE_ENV=development

# Enable development features
DEV_MODE=true

# ====================
# Feature Flags
# ====================

# Enable AI Assistant
ENABLE_AI_ASSISTANT=true

# Enable Payment Processing
ENABLE_PAYMENTS=true

# Enable Push Notifications
ENABLE_NOTIFICATIONS=true

# ====================
# Security
# ====================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limit - Max requests per window
RATE_LIMIT_MAX=100

# Rate Limit - Window duration in milliseconds
RATE_LIMIT_WINDOW=900000

# Session Secret
SESSION_SECRET=

# ====================
# Development Credentials (DEV ONLY)
# ====================
# NEVER use these in production!
# Set these for local development ONLY

DEV_ADMIN_EMAIL=
DEV_ADMIN_PASSWORD=

DEV_MECHANIC_EMAIL=
DEV_MECHANIC_PASSWORD=

DEV_CUSTOMER_EMAIL=
DEV_CUSTOMER_PASSWORD=
