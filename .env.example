# Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ====================
# Environment
# ====================

# Environment type (development, staging, production)
NODE_ENV=development

# ====================
# API Configuration
# ====================

# Expo public API configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_BASE_URL=https://your-api-domain.com
EXPO_PUBLIC_BACKEND_URL=https://your-backend-domain.com

# API Port for backend server
API_PORT=3000

# ====================
# Database
# ====================

# Database connection URL
# PostgreSQL: postgresql://username:password@localhost:5432/mobile_mechanic_db
DATABASE_URL="postgresql://username:password@localhost:5432/mobile_mechanic_db"

# ====================
# Authentication & Security
# ====================

# JWT Secret for token signing (minimum 64 characters recommended)
# Generate with: openssl rand -base64 64
JWT_SECRET=

# JWT Token Expiration (e.g., '1h', '7d', '30d')
JWT_EXPIRATION=7d

# Refresh Token Expiration
REFRESH_TOKEN_EXPIRATION=30d

# NextAuth configuration (if using)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Session Secret (minimum 32 characters)
SESSION_SECRET=

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# ====================
# Rate Limiting
# ====================

# Rate Limit - Max requests per window
RATE_LIMIT_MAX=100

# Rate Limit - Window duration in milliseconds
RATE_LIMIT_WINDOW=900000

# ====================
# Build Configuration
# ====================

# Required for Android builds with Google Services
GOOGLE_SERVICES_JSON=

# Google Maps API Key for location features
GOOGLE_MAPS_API_KEY=
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Expo Application Services Project ID
EAS_PROJECT_ID=

# ====================
# Firebase Configuration
# ====================

FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ====================
# Payment Configuration (Stripe)
# ====================

# Stripe Keys
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# ====================
# WebSocket
# ====================

WEBSOCKET_PORT=3001
WEBSOCKET_SECRET="your-websocket-secret"

# ====================
# Push Notifications
# ====================

EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your_push_notification_key
ENABLE_NOTIFICATIONS=true

# ====================
# AI Integration
# ====================

# Abacus AI configuration
ABACUS_AI_API_KEY="your-abacus-ai-key"
CUSTOMER_SUPPORT_AGENT_ID="c816aa206"
MECHANIC_ASSISTANT_AGENT_ID="your-mechanic-agent-id"

# Enable AI Assistant feature flag
ENABLE_AI_ASSISTANT=true

# ====================
# File Storage
# ====================

# Storage type: local, aws, cloudinary
UPLOAD_STORAGE_TYPE="local"

# AWS S3 configuration (if using AWS)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-bucket-name"

# ====================
# External Services
# ====================

# VIN Decoder API (if using external service)
VIN_DECODER_API_KEY=

# SMS Service (Twilio, etc.)
SMS_SERVICE_API_KEY=
SMS_SERVICE_PHONE_NUMBER=

# Email Service configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=

# ====================
# Logging & Monitoring
# ====================

# Sentry DSN for error tracking
SENTRY_DSN=

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ====================
# Feature Flags
# ====================

# Enable Development Mode features
DEV_MODE=true

# Enable Payment Processing
ENABLE_PAYMENTS=true

# ====================
# Development Credentials (DEV ONLY)
# ====================
# NEVER use these in production!
# Set these for local development ONLY

DEV_ADMIN_EMAIL=
DEV_ADMIN_PASSWORD=

DEV_MECHANIC_EMAIL=
DEV_MECHANIC_PASSWORD=

DEV_CUSTOMER_EMAIL=
DEV_CUSTOMER_PASSWORD=

# Demo User Credentials (Development Only)
EXPO_PUBLIC_ADMIN_PASSWORD="your-admin-password"
EXPO_PUBLIC_MECHANIC_PASSWORD="your-mechanic-password"
EXPO_PUBLIC_CUSTOMER_PASSWORD="your-customer-password"
