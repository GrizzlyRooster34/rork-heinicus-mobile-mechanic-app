# ============================================
# HEINICUS MOBILE MECHANIC - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# ENVIRONMENT
# ============================================
# Set to 'development', 'production', or 'test'
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# PostgreSQL/Supabase connection string
# Format: postgresql://username:password@host:port/database?schema=public
# Example local: postgresql://postgres:password@localhost:5432/heinicus_db
# Example Supabase: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/heinicus_db

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret for signing tokens - MUST be at least 32 characters
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production

# JWT token expiration time (e.g., '7d', '24h', '60m')
JWT_EXPIRES_IN=7d

# ============================================
# DEV CREDENTIALS (Development/Testing Only)
# ============================================
# These are used for seeding test accounts during development
# DO NOT use these in production!
ADMIN_PASSWORD=admin123
MECHANIC_PASSWORD=mechanic123
CUSTOMER_PASSWORD=customer123

# ============================================
# BACKEND API SERVER
# ============================================
# Port for the backend tRPC/Hono server
PORT=3000
API_PORT=3000

# ============================================
# EXPO PUBLIC VARIABLES
# ============================================
# These variables are accessible on the client-side
# IMPORTANT: All Expo public vars MUST start with EXPO_PUBLIC_

# Production API base URL (leave empty for development)
# Example: https://api.heinicus.com or https://your-app.rork.io
EXPO_PUBLIC_RORK_API_BASE_URL=

# Optional API key for backend authentication
# Used in Authorization header if provided
EXPO_PUBLIC_API_KEY=

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================
# Path to google-services.json file (for Android)
GOOGLE_SERVICES_JSON=

# Google Maps API key for location features
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=

# ============================================
# EXPO APPLICATION SERVICES (EAS)
# ============================================
# Your EAS project ID (for builds and updates)
# Get from: https://expo.dev/accounts/[account]/projects/[project]/settings
EAS_PROJECT_ID=
